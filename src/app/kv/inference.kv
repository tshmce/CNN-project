#:import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton

<PredictionScreen>:
    name: "prediction"
    MDBoxLayout:
        orientation: "vertical"
        padding: "24dp"
        spacing: "24dp"

        MDLabel:
            text: "Prediction Workspace"
            font_style: "H5"
            halign: "left"

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"
            MDFillRoundFlatButton:
                text: "Choose Image"
                on_release: root.choose_image()
            MDLabel:
                id: selected_image
                text: "No image selected"
                theme_text_color: "Secondary"

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"
            MDFillRoundFlatButton:
                text: "Predict"
                on_release: root.run_prediction()
            MDFillRoundFlatButton:
                text: "Back"
                on_release: root.back_to_dashboard()
