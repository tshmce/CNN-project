#:import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton

<DashboardScreen>:
    name: "dashboard"
    MDBoxLayout:
        orientation: "vertical"
        padding: "24dp"
        spacing: "24dp"

        MDLabel:
            text: "Crack Detection"
            font_style: "H4"
            halign: "left"

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"
            MDFillRoundFlatButton:
                text: "Training"
                on_release: root.open_training()
            MDFillRoundFlatButton:
                text: "Prediction"
                on_release: root.open_prediction()
